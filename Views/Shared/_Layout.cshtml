<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NRDCL</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/1.10.18/css/dataTables.bootstrap4.min.css" rel="stylesheet">

    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/1.5.2/css/buttons.bootstrap4.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.2.3/css/responsive.bootstrap4.min.css">


</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-inverse border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-controller="home" asp-action="index">
                    <img src="~/images/logo.png" alt="logo" class="rounded-circle m" width="60" height="60">
                </a>
                @*<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="index">NRDCL</a>*@
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1 nav-pills">
                        <li class="nav-item" role="presentation">
                            <a class="nav-link" asp-area="" asp-controller="Customer" asp-action="RegisterCustomer">Register Customer</a>
                        </li>
                        <li class="nav-item" role="presentation">
                            <a class="nav-link" asp-area="" asp-controller="Site" asp-action="RegisterSite">Register Site</a>
                        </li>

                        <li class="nav-item" role="presentation">

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Product" asp-action="RegisterProduct">Register Product</a>

                        </li>
                        <li class="nav-item" role="presentation">
                            <a class="nav-link" asp-area="" asp-controller="DepositAdvance" asp-action="DepositAdvance">Deposite Advance</a>
                        </li>
                        <li class="nav-item" role="presentation">
                            <a class="nav-link" asp-area="" asp-controller="PlaceOrder" asp-action="OrderDetails">Place Order</a>
                        </li>
                        <li class="nav-item" role="presentation">
                            <a class="nav-link" asp-area="" asp-controller="Login" asp-action="Login">Login</a>
                        </li>
                    </ul>
                </div>
                <form class="d-flex topnav-right">
                    <input class="form-control me-2 mr-2" type="text" placeholder="Search&hellip;" aria-label="Search">
                    <button class="btn btn-outline-success" type="button"><i class="fa fa-search"></i></button>
                </form>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy;@DateTime.Now.Year - NRDCL - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!-- Bootstrap core JavaScript-->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>

    <!-- Page level plugin JavaScript-->
    <script src="https://cdn.datatables.net/1.10.18/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.18/js/dataTables.bootstrap4.min.js"></script>
    <!--Bootstrap Datatable Export--->
    @*<script src="https://unpkg.com/tableexport.jquery.plugin/tableExport.min.js"></script>
    <script src="https://unpkg.com/tableexport.jquery.plugin/libs/jsPDF/jspdf.min.js"></script>
    <script src="https://unpkg.com/tableexport.jquery.plugin/libs/jsPDF-AutoTable/jspdf.plugin.autotable.js"></script>
    <script src="assets/bootstrap-table.min.js"></script>
    <script src="assets/extensions/print/bootstrap-table-print.min.js"></script>
    <script src="assets/extensions/export/bootstrap-table-export.min.js"></script>*@



    @RenderSection("Scripts", required: false)
    <script> 
        $(document).ready(function () { 
            $('#dataTable').DataTable({
                     
            })
        })
    </script>
    
</body>
</html>
